<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/listView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:onClick="btnAdd"
            android:text="Add" />

        <Button
            android:id="@+id/btn_fixlist"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/listView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="FixList" />

        <Button
            android:id="@+id/btn_headhide"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/listView"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="HeadHide" />


    </LinearLayout>


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:divider="@android:color/holo_blue_light"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/holo_red_dark"
        android:scrollbars="vertical"
        android:fastScrollEnabled="true" />

    <ImageView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/in_icon"
        />


</LinearLayout>
